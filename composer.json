{
    "name": "izerus/simple-rotating-logger",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "monolog",
        "logger",
        "log",
        "rotating",
        "rotate",
        "size"
    ],
    "authors": [
        {
            "name": "Pavel Mikhalev"
        }
    ],
    "autoload": {
        "psr-4": {
            "Izerus\\SimpleRotatingLogger\\": "src/"
        }
    },
    "require": {
        "php": "^7.4",
        "monolog/monolog": "^2.10",
        "sgoettsch/monolog-rotating-file-handler": "^2.0"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "vendor/bin/phpunit --coverage-text"
        ],
        "coverage:html": [
            "vendor/bin/phpunit --coverage-html .phpunit-coverage"
        ]
    }
}
